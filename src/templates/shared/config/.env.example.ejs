# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database Configuration
<% if (dbTechnology === 'drizzle') { %>
# Drizzle ORM + Neon Database
DATABASE_URL="postgresql://user:password@localhost:5432/database"
<% } else if (dbTechnology === 'prisma') { %>
# Prisma + PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/database"
<% } else if (dbTechnology === 'typeorm') { %>
# TypeORM + MySQL
DATABASE_HOST="localhost"
DATABASE_PORT="3306"
DATABASE_USERNAME="user"
DATABASE_PASSWORD="password"
DATABASE_NAME="database"
<% } %>

# Authentication Configuration
<% if (authTechnology === 'better-auth') { %>
# Better Auth
AUTH_SECRET="your-secret-key-here"
<% } else if (authTechnology === 'next-auth') { %>
# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
<% } %>

# OAuth Provider Configuration (uncomment and configure as needed)
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

