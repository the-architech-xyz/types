{
  "id": "premium-auth-pages",
  "name": "Premium Authentication Pages",
  "description": "Beautiful, responsive authentication pages that work with any auth provider and UI framework",
  "category": "cross-adapter",
  "version": "1.0.0",
  "blueprint": "blueprint.ts",
  "compatibility": [
    "auth/better-auth",
    "auth/next-auth",
    "auth/supabase-auth",
    "ui/shadcn-ui",
    "ui/chakra-ui",
    "ui/mantine"
  ],
  "parameters": {
    "theme": {
      "type": "string",
      "default": "modern",
      "description": "Page theme style",
      "required": false,
      "options": ["modern", "minimal", "corporate", "creative"]
    },
    "socialProviders": {
      "type": "array",
      "default": ["google", "github"],
      "description": "Social authentication providers",
      "required": false,
      "options": ["google", "github", "discord", "twitter", "linkedin"]
    },
    "features": {
      "type": "array",
      "default": ["login", "register", "forgot-password"],
      "description": "Authentication features to include",
      "required": false,
      "options": ["login", "register", "forgot-password", "reset-password", "verify-email", "two-factor"]
    },
    "customization": {
      "type": "object",
      "default": {
        "logo": true,
        "background": "gradient",
        "animations": true
      },
      "description": "Customization options",
      "required": false
    }
  }
}
